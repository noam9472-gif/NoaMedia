<Page x:Class="NoaMedia.Pages.AddMovie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NoaMedia.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Add Movie" Background="Black">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
        <TextBlock Text="Add New Movie" Foreground="#E50914" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBlock Text="Movie Name" Foreground="White" Margin="0,10,0,5"/>
        <TextBox x:Name="MovieNameTextBox" Padding="8" Background="#333" Foreground="White" BorderBrush="Gray" TextChanged="MovieNameTextBox_TextChanged"/>

        <TextBlock Text="Genre Name" Foreground="White" Margin="0,10,0,5"/>
        <TextBox x:Name="GenreTextBox" Padding="8" Background="#333" Foreground="White" BorderBrush="Gray"/>

        <TextBlock Text="Poster Image URL" Foreground="White" Margin="0,10,0,5"/>
        <TextBox x:Name="PosterUrlTextBox" Padding="8" Background="#333" Foreground="White" BorderBrush="Gray"/>

        <TextBlock Text="Duration (Minutes)" Foreground="White" Margin="0,10,0,5"/>
        <TextBox x:Name="DurationTextBox" Padding="8" Background="#333" Foreground="White" BorderBrush="Gray"/>

        <TextBlock Text="Age Rating" Foreground="White" Margin="0,10,0,5"/>
        <TextBox x:Name="AgeRatingTextBox" Padding="8" Background="#333" Foreground="White" BorderBrush="Gray"/>

        <Button Content="Save Movie" Click="SaveMovie_Click" Margin="0,30,0,10" Height="45" Background="#E50914" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

        <Button Content="Back to Home" Click="Back_Click" Background="Transparent" Foreground="Gray" BorderThickness="0" Cursor="Hand"/>
    </StackPanel>
</Page>