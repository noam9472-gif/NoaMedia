<Page x:Class="NoaMedia.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="My Profile" Background="#141414">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border Width="100" Height="100" Background="#E50914" CornerRadius="50">
                    <TextBlock x:Name="ProfileInitialText" Text="U" Foreground="White" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="UserNameHeading" Text="User Name" Foreground="White" FontSize="32" FontWeight="Bold"/>
                    <Button Content="Logout" Click="Logout_Click" Background="Transparent" Foreground="#E50914" BorderThickness="0" HorizontalAlignment="Left" Cursor="Hand" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>

            <Button Content="← Back to Home" Click="Back_Click" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Background="#333" Foreground="White" Padding="15,8" BorderThickness="0" Cursor="Hand"/>
        </Grid>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" Margin="0,0,30,10" Padding="5,10">
                                    <ContentPresenter x:Name="ContentSite" ContentSource="Header" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#E50914"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="MY VIDEOS">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <WrapPanel x:Name="MyVideosPanel" />
                </ScrollViewer>
            </TabItem>

            <TabItem Header="LIKED VIDEOS">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <WrapPanel x:Name="LikedVideosPanel" />
                </ScrollViewer>
            </TabItem>

            <TabItem Header="MY COMMENTS">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <StackPanel x:Name="MyCommentsPanel" />
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>