<Window x:Class="NoamediaLogin.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Noamedia - Sign Up" Height="600" Width="800"
        Background="White" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Create Account" 
                       Foreground="#000080" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Margin="0,0,0,30" 
                       HorizontalAlignment="Center"/>

            <TextBlock Text="User Name" Foreground="DimGray" Margin="0,0,0,5" FontSize="14"/>
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Margin="0,0,0,20" Width="350">
                <TextBox x:Name="NewUserTextBox" 
                         Padding="10" 
                         BorderThickness="0" 
                         FontSize="16" 
                         Background="White"/>
            </Border>

            <TextBlock Text="Password" Foreground="DimGray" Margin="0,0,0,5" FontSize="14"/>
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Margin="0,0,0,30" Width="350">
                <PasswordBox x:Name="NewPasswordBox" 
                             Padding="10" 
                             BorderThickness="0" 
                             FontSize="16" 
                             Background="White"/>
            </Border>

            <Button Content="Sign Up" 
                    Click="RegisterBtn_Click" 
                    Width="350" Height="45" 
                    Background="#000080" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    FontSize="16"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#000066"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Already have an account? Sign in" 
                    Background="Transparent" 
                    Foreground="Gray" 
                    BorderThickness="0" 
                    Margin="0,20,0,0" 
                    Click="BackToLogin_Click" 
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>